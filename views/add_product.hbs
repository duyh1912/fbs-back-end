<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>

<body>
        <div class="col-lg-10" style="position: absolute;left: 8%;">
            <div class="row m-2 border border-primary">
                <div class="col-lg-8">
                    <form method="post" class="was-validated m-2" action="/create_product"  enctype="multipart/form-data"
                    >
                        <h4>Thêm sản phẩm</h4>
                        <div class="form-group">
                            <input type="hidden" class="form-control" placeholder="Nhập Mã sản phẩm"  value="{{product.productId}}" required="">
                            <div class="valid-feedback">Ok</div>
                            <div class="invalid-feedback">Nhập lại</div>
                        </div>
                        <div class="form-group">
                            <label>Tên sản phẩm:</label>
                            <input type="phone" class="form-control" name="name" placeholder="Nhập Tên sản phẩm" value="{{product.name}}"  required>
                            <div class="valid-feedback">Ok.</div>
                            <div class="invalid-feedback">Nhập lại</div>
                        </div>
                        <div class="form-group">
                            <label>Giá sản phẩm:</label>
                            <input type="phone" class="form-control" name="price" placeholder="Nhập Giá sản phẩm"   value="{{product.price}}" required>
                            <div class="valid-feedback">Ok.</div>
                            <div class="invalid-feedback">Nhập lại</div>
                        </div>
                        <div class="form-group">
                            <label>Mô tả sản phẩm:</label>
                            <input type="phone" class="form-control" name="description" placeholder="Nhập Mô tả sản phẩm" value="{{product.description}}" required>
                            <div class="valid-feedback">Ok.</div>
                            <div class="invalid-feedback">Nhập lại</div>
                        </div>
                        <select class="form-control" name="cateId" id="cateId" name="cate">
                            {{#each cateList}}
                                <option selected="{{cateId}}"  value="{{cateId}}">{{name}}</option>
                            {{/each}}
                        </select>
                        <div class="rounded-  border border-primary m-2" style="height:100px">

                            <div class="form-group">
                                <input
                                        multiple
                                        type="file"
                                        class="form-control-file"
                                        name="files"
                                        id="file"
                                        placeholder="File"
                                />
                            </div>
                        </div>

                        <button  type="submit" class="btn btn-primary">Lưu sản phẩm</button>
                    </form>
                </div>

            </div>

        </div>
</body> 
