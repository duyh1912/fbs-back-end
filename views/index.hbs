

<body>
    <div class="col-lg-10" style="position: absolute;right: 0;">
        <button type="button">
            <a  href="/add_product" class="btn btn-primary">Thêm sản phẩm</a>
        </button>
        </hr>
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Images</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Cate</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{# each productList}}
                <td>
                    <image src="http://localhost:5000/public/photo/{{image}}"
                            style="width: 50px; height: 50px"></image>
                </td>
                <td>{{name}}</td>
                <td>{{price}}</td>
                <td>{{description}}</td>
                <td>{{# each cate}}
                        <p>{{name}}</p>
                          {{/each}}

                </td>
                <td>
                <a class="btn btn-outline-warning" href="/edit_product/{{_id}}">Edit</a>

                <a class="btn btn-outline-danger" href="/delete_product/{{_id}}">Delete</a>
                </td>
                </tr>
                {{/each}}
            </tbody>

        </table>

    </div>
    <script>
        // $(document).ready(function () {
        //     $('#table').DataTable();
        // });
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>
