<div class="row m-2">
    <div class="col-lg-8">
        <form method="post" class="was-validated m-2" action="/update_cate"  enctype="multipart/form-data">
            <h4>Cập nhật loại</h4>
                <div class="form-group">
                    <input type="hidden" name="id" class="form-control" placeholder="Nhập Mã sản phẩm"  value="{{cate._id}}" required="">
                </div>
                <div class="form-group">
                    <label>Tên sản phẩm:</label>
                    <input type="phone" class="form-control" name="name" placeholder="Nhập Tên sản phẩm" value="{{cate.name}}"  required>
                    <div class="valid-feedback">Ok.</div>
                    <div class="invalid-feedback">Nhập lại</div>
                </div>
                <input type="hidden" name="image" class="form-control" placeholder="Nhập Mã sản phẩm"  value="{{cate.images}}" required="">
                <div class="rounded border border-primary m-2" style="height:100px">
                    <image src="http://localhost:4000/public/photo/{{cate.images}}"  style="width: 50px; height: 50px"> </image>
                    <div class="form-group">
                        <input
                            multiple
                            type="file"
                            class="form-control-file"
                            name="file"
                            value="{{cate.images}}"
                            id="file"
                            placeholder="File"
                            />
                    </div>
                </div>
            <button  type="submit" class="btn btn-primary">Cập nhật</button>
        </form>
    </div>

</div>

