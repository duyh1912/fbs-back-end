
<body>
    <div class="col-lg-10" style="position: absolute;right: 0;">
        <button>
            <a href="/add_cate" class="btn btn-primary">+</a>
        </button>
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Images</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                    {{# each cateList}}
                <td>
                    <image src="http://localhost:5000/public/photo/{{images}}" style="width: 50px; height: 50px"> </image>
                </td>
                <td>{{name}}</td>

                <td>
                    <a class="btn btn-outline-warning" href="/edit_cate/{{_id}}">Edit</a>

                    <a class="btn btn-outline-danger" href="/delete_cate/{{_id}}">Delete</a>
                 </td>
                </tr>
                    {{/each}}
            </tbody>
        </table>
    </div>
    <script>
        // $(document).ready(function () {
