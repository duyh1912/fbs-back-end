<div class="row m-2 ">
    <div class="col-lg-8">
        <form method="post" class="was-validated m-2" action="/update_product" enctype="multipart/form-data">
            <h4>Thêm sản phẩm</h4>
            <div class="form-group">
                <label>Mã sản phẩm:</label>
                <input type="hidden" name="id" class="form-control" placeholder="Nhập Mã sản phẩm"
                                value="{{product._id}}" required="">
            </div>
            <div class="form-group">
                <label>Tên sản phẩm:</label>
                <input type="phone" class="form-control" name="name" placeholder="Nhập Tên sản phẩm"
                        value="{{product.name}}" required>
                <div class="valid-feedback">Ok.</div>
                <div class="invalid-feedback">Nhập lại</div>
            </div>
            <div class="form-group">
                <label>Giá sản phẩm:</label>
                <input type="phone" class="form-control" name="price" placeholder="Nhập Giá sản phẩm"
                        value="{{product.price}}" required>
                <div class="valid-feedback">Ok.</div>
                <div class="invalid-feedback">Nhập lại</div>
            </div>
            <div class="form-group">
                <label>Mô tả sản phẩm:</label>
                <input type="phone" class="form-control" name="description"
                        placeholder="Nhập Mô tả sản phẩm" value="{{product.description}}" required>
                <div class="valid-feedback">Ok.</div>
                <div class="invalid-feedback">Nhập lại</div>
            </div>
            <select class="form-control" id="cateId" name="cateId">
                <script>
                    var str = "";
                </script>
                <script>
                     var s = "{{product.cateId}}"
                </script>
                    {{#each cates}}
                 <script>
                    var abc = "";
                    if (s.toString() === "{{cateId}}") {
                        abc = "selected"
                        }
                    str += `<option ${abc} value="{{cateId}}">{{name}}</option>`;
                </script>
                {{/each}}
                <script>
                     document.write(str);
                </script>
            </select>
                <input type="hidden" name="image" class="form-control" placeholder="Nhập Mã sản phẩm"
                        value="{{product.image}}" required="">
                <div class="rounded-  border border-primary m-2" style="height:100px">
                    <image src="http://localhost:4000/public/photo/{{product.image}}"
                        style="width: 50px; height: 50px"></image>

                    <div class="form-group">
                    <input
                        multiple
                        type="file"
                        class="form-control-file"
                        name="file"
                        value="{{product.image}}"
                        id="file"
                        placeholder="File"/>
                    </div>
                </div>
            <button type="submit" class="btn btn-primary">Lưu sản phẩm</button>
        </form>
    </div>
</div>
