<head>
    <title>FsBsServer</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
          integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>
<body>
   <div class="col-lg-9" style="position: absolute;right: 0;">
        <div class="d-flex">
            <form class="form-inline my-2 my-lg-0 p-2 mr-auto">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <div class="p-2 ">
                <img class="rounded-circle" src="../images/avatar.png" alt="" height="42" width="42">
            </div>
            <div class="p-2">
                <p class="text-lg-center mt-2">Admin</p>
            </div>
        </div>
            <div class="row m-2 border border-primary">
                <div class="col-lg-8">
                    <form method="post" class="was-validated m-2" action="/update_product" enctype="multipart/form-data"
                    >
                        <h4>Thêm sản phẩm</h4>
                        <div class="form-group">
                            <label>Mã sản phẩm:</label>
                            <input type="hidden" name="id" class="form-control" placeholder="Nhập Mã sản phẩm"
                                value="{{product._id}}" required="">
                        </div>
                        <div class="form-group">
                            <label>Tên sản phẩm:</label>
                            <input type="phone" class="form-control" name="name" placeholder="Nhập Tên sản phẩm"
                                   value="{{product.name}}" required>
                            <div class="valid-feedback">Ok.</div>
                            <div class="invalid-feedback">Nhập lại</div>
                        </div>
                        <div class="form-group">
                            <label>Giá sản phẩm:</label>
                            <input type="phone" class="form-control" name="price" placeholder="Nhập Giá sản phẩm"
                                   value="{{product.price}}" required>
                            <div class="valid-feedback">Ok.</div>
                            <div class="invalid-feedback">Nhập lại</div>
                        </div>
                        <div class="form-group">
                            <label>Mô tả sản phẩm:</label>
                            <input type="phone" class="form-control" name="description"
                                   placeholder="Nhập Mô tả sản phẩm" value="{{product.description}}" required>
                            <div class="valid-feedback">Ok.</div>
                            <div class="invalid-feedback">Nhập lại</div>
                        </div>
                        <select class="form-control" id="cateId" name="cateId">
                            <script>
                                var str = "";

                            </script>
                            <script>
                                var s = "{{product.cateId}}"
                            </script>
                            {{#each cates}}
                                <script>
                                    var abc = "";
                                    if (s.toString() === "{{cateId}}") {
                                        abc = "selected"
                                    }
                                    str += `<option ${abc} value="{{cateId}}">{{name}}</option>`;
                                </script>
                            {{/each}}
                            <script>
                                document.write(str);
                            </script>
                        </select>
                        <input type="hidden" name="image" class="form-control" placeholder="Nhập Mã sản phẩm"
                               value="{{product.image}}" required="">
                        <div class="rounded-  border border-primary m-2" style="height:100px">
                            <image src="http://localhost:4000/public/photo/{{product.image}}"
                                   style="width: 50px; height: 50px"></image>

                            <div class="form-group">
                                <input
                                     multiple
                                    type="file"
                                    class="form-control-file"
                                    name="file"
                                    value="{{product.image}}"
                                    id="file"
                                     placeholder="File"
                                />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Lưu sản phẩm</button>
                    </form>
                </div>
        </div>
    </div>
</body>
